SELECT A.REST_ID as REST_ID, A.REST_NAME as REST_NAME, A.FOOD_TYPE as FOOD_TYPE, A.FAVORITES as FAVORITES, A.ADDRESS as ADDRESS, ROUND(AVG(B.REVIEW_SCORE), 2) AS SCORE FROM REST_INFO AS A JOIN REST_REVIEW AS B ON A.REST_ID = B.REST_ID 
WHERE A.ADDRESS LIKE '서울%'
GROUP BY A.REST_NAME ORDER BY SCORE DESC, FAVORITES DESC
